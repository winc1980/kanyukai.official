---
import { Image } from "astro:assets";
import image1 from "../assets/1731855360710.jpg";
import image2 from "../assets/1731855360851.jpg";
import image3 from "../assets/1731855360895.jpg";
import image4 from "../assets/1731855360934.jpg";

// import { getImages } from "../lib/microcms";
// const response4= await getImages({ fields: ["id","og_image"] });
const photos = [
    image1,
    image2,
    image3,
    image4,
    image1,
    image2,
    image3,
    image4,
    image1,
    image2,
    image3,
    image4,
];
---
<section id="photo" class="p-photo">
    {photos.map((photo, index) => (
        index % 2 == 0 ? (
            <div class="p-photo__img__box even">
                <Image src={photo} alt={photo.src}/> 
            </div>
        ): (
            <div class="p-photo__img__box odd">
                { <Image src={photo} alt={photo.src}/> }
            </div>
        )
    ))}
</section>